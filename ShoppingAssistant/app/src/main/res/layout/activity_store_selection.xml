<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreSelectionActivity">

    <Button
        android:id="@+id/storeCBtn"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Store C"
        app:layout_constraintEnd_toEndOf="@+id/storeBBtn"
        app:layout_constraintStart_toStartOf="@+id/storeBBtn"
        app:layout_constraintTop_toBottomOf="@+id/storeBBtn" />

    <Button
        android:id="@+id/storeBBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Store B"
        app:layout_constraintEnd_toEndOf="@+id/storeABtn"
        app:layout_constraintStart_toStartOf="@+id/storeABtn"
        app:layout_constraintTop_toBottomOf="@+id/storeABtn" />

    <Button
        android:id="@+id/storeABtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store A"
        android:layout_marginTop="270dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>